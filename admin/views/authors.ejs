<!DOCTYPE html>
<html lang="fr">
<head>
  <meta charset="UTF-8">
  <title>Admin - Gestion des Auteurs</title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css">
</head>
<body class="bg-light">

<div class="container my-5">
  <h1 class="mb-4">✍️ Gestion des Auteurs</h1>

  <!-- Formulaire d'ajout -->
  <div class="card mb-4">
    <div class="card-header">Ajouter un auteur</div>
    <div class="card-body">
      <form action="/admin/authors/create" method="POST">
        <div class="mb-3">
          <label for="firstname" class="form-label">Prénom</label>
          <input type="text" class="form-control" id="firstname" name="firstname" required>
        </div>
        <div class="mb-3">
          <label for="name" class="form-label">Nom</label>
          <input type="text" class="form-control" id="name" name="name" required>
        </div>
        <div class="mb-3">
          <label for="bio" class="form-label">Biographie</label>
          <textarea class="form-control" id="bio" name="bio" rows="4"></textarea>
        </div>
        <button type="submit" class="btn btn-primary">Créer</button>
      </form>
    </div>
  </div>

  <!-- Liste des auteurs -->
  <div class="card">
    <div class="card-header">Liste des auteurs</div>
    <div class="card-body">
      <table class="table table-striped">
        <thead>
          <tr>
            <th>Prénom</th>
            <th>Nom</th>
            <th>Biographie</th>
            <th>Livres associés</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <!-- Exemple statique -->
          <tr>
            <td>Isaac</td>
            <td>Asimov</td>
            <td>Auteur de science-fiction prolifique...</td>
            <td>Fondation, Les Robots</td>
            <td>
              <a href="/admin/authors/1/edit" class="btn btn-sm btn-warning">Modifier</a>
              <form action="/admin/authors/1/delete" method="POST" style="display:inline;">
                <button type="submit" class="btn btn-sm btn-danger">Supprimer</button>
              </form>
            </td>
          </tr>
          <!-- <% authors.forEach(author => { %>
               <tr>
                 <td><%= author.firstname %></td>
                 <td><%= author.name %></td>
                 <td><%= author.bio %></td>
                 <td><%= author.books.map(b => b.title).join(', ') %></td>
                 <td>...</td>
               </tr>
             <% }) %> -->
        </tbody>
      </table>
    </div>
  </div>
</div>

</body>
</html>