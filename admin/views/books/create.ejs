<%- include("../partials/header") %>

<div class="container my-4">
  <h1>ğŸ“– CrÃ©er un nouveau livre</h1>

  <form action="/admin/books" method="POST" enctype="multipart/form-data">
    <!-- Titre -->
    <div class="mb-3">
      <label class="form-label">Titre</label>
      <input type="text" class="form-control" name="title" required>
    </div>

    <!-- Date de sortie -->
    <div class="mb-3">
      <label class="form-label">Date de sortie</label>
      <input type="date" class="form-control" name="release_date">
    </div>

    <!-- Synopsis -->
    <div class="mb-3">
      <label class="form-label">Synopsis</label>
      <textarea class="form-control" name="synopsis" rows="4"></textarea>
    </div>

    <!-- Cover -->
    <div class="mb-3">
      <label class="form-label">Couverture</label>
      <input type="file" class="form-control" name="cover" accept="image/*">
    </div>

    <!-- Auteurs inline -->
    <div class="mb-3">
      <label class="form-label">Auteurs</label>
      <select name="authors[]" class="form-select" multiple>
        <% authors.forEach(author => { %>
          <option value="<%= author.id %>"><%= author.name %></option>
        <% }) %>
      </select>
      <small class="text-muted">Maintenir Ctrl (ou Cmd) pour sÃ©lectionner plusieurs auteurs</small>
    </div>

    <!-- Genres inline -->
    <div class="mb-3">
      <label class="form-label">Genres</label>
      <select name="genres[]" class="form-select" multiple>
        <% genres.forEach(genre => { %>
          <option value="<%= genre.id %>"><%= genre.name %></option>
        <% }) %>
      </select>
    </div>

    <!-- Bouton -->
    <button type="submit" class="btn btn-success">CrÃ©er le livre</button>
    <a href="/admin/books" class="btn btn-secondary">Annuler</a>
  </form>
</div>

