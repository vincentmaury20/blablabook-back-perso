<%- include("../partials/header") %>

<div class="container my-4">

  <!-- HEADER DE PAGE -->
  <div class="d-flex flex-column flex-md-row justify-content-between align-items-md-center mb-4 gap-3">
    <h1 class="fw-bold text-secondary">
      <i class="bi bi-pencil-square text-success"></i> Modifier un livre
    </h1>
  </div>

  <form action="/admin/book/<%= book.id %>?_method=PUT" method="POST" enctype="multipart/form-data">

    <!-- Titre + Date -->
    <div class="row">
      <div class="col-12 col-md-6 mb-3">
        <label class="form-label fw-semibold">Titre</label>
        <input type="text" class="form-control" name="title" value="<%= book.title %>" required>
      </div>

      <div class="col-12 col-md-6 mb-3">
        <label class="form-label fw-semibold">Date de sortie</label>
        <input type="date" class="form-control" name="release_date" value="<%= book.release_date || '' %>">
      </div>
    </div>

    <!-- Auteurs -->
    <div class="mb-3">
      <label class="form-label fw-semibold">Auteur(s)</label>
      <select name="authors[]" class="form-select" multiple>
        <% authors.forEach(author => { %>
          <option value="<%= author.id %>" <%= book.authors.some(a => a.id === author.id) ? "selected" : "" %>>
            <%= author.name %> <%= author.firstname || "" %>
          </option>
        <% }) %>
      </select>
      <small class="text-muted">Maintenir Ctrl (ou Cmd) pour sélectionner plusieurs auteurs</small>
    </div>

    <!-- Synopsis -->
    <div class="mb-3">
      <label class="form-label fw-semibold">Synopsis</label>
      <textarea class="form-control" name="synopsis" rows="4"><%= book.synopsis %></textarea>
    </div>

    <!-- Genres -->
    <div class="mb-3">
      <label class="form-label fw-semibold">Genre(s)</label>
      <select name="genres[]" class="form-select" multiple>
        <% genres.forEach(genre => { %>
          <option value="<%= genre.id %>" <%= book.genres.some(g => g.id === genre.id) ? "selected" : "" %>>
            <%= genre.name %>
          </option>
        <% }) %>
      </select>
    </div>

    <!-- Couverture -->
    <div class="mb-3">
      <label class="form-label fw-semibold">Couverture</label>
      <input type="file" class="form-control" name="cover" accept="image/*">
    
      <% if (book.cover) { %>
        <div class="mt-3 p-2 border rounded d-inline-block bg-light">
          <p class="fw-semibold mb-2 text-center">Aperçu actuel</p>
          <img 
            src="<%= book.cover %>" 
            alt="Couverture actuelle" 
            class="img-fluid rounded shadow-sm"
            style="max-height: 180px; object-fit: cover;"
          >
        </div>
      <% } %>
    </div>


    <!-- Boutons -->
    <div class="d-flex flex-column flex-md-row gap-2 mt-3">
      <button type="submit" class="btn btn-primary info-hover">
        <i class="bi bi-check-circle-fill"></i> Mettre à jour
      </button>

      <a href="/admin/books" class="btn btn-secondary">
        <i class="bi bi-x-circle"></i> Annuler
      </a>
    </div>

  </form>
</div>

<%- include("../partials/footer") %>