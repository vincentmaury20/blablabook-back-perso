<%- include("../partials/header") %>

<div class="container my-4">

  <!-- Titre + actions -->
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="fw-bold">üìö Liste des livres</h1>
    <a href="/admin/book/create" class="btn btn-success">
      ‚ûï Ajouter un livre
    </a>
  </div>

  <!-- Barre d'outils -->
  <div class="card shadow-sm mb-4">
    <div class="card-body d-flex justify-content-between align-items-center">
      <a href="/admin" class="btn btn-outline-primary">
        ‚¨ÖÔ∏è Retour au dashboard
      </a>

      <form class="d-flex" method="GET" action="/admin/books" style="max-width: 300px;">
        <input 
          class="form-control form-control-sm me-2" 
          type="search" 
          placeholder="Rechercher..." 
          aria-label="Search" 
          name="search"
          value="<%= search || '' %>"
        >
        <button class="btn btn-sm btn-outline-secondary" type="submit">OK</button>
      </form>
    </div>
  </div>

  <!-- Tableau -->
  <div class="card shadow-sm">
    <div class="card-body p-0">

      <table class="table table-hover align-middle mb-0">
        <thead class="table-dark">
          <tr>
            <th>Titre</th>
            <th>Auteur(s)</th>
            <th>Genre(s)</th>
            <th>Date de sortie</th>
            <th class="text-center">Actions</th>
          </tr>
        </thead>

        <tbody>
          <% books.forEach(book => { %>
            <tr>

              <!-- Titre -->
              <td class="fw-semibold"><%= book.title %></td>

              <!-- Auteurs -->
              <td>
                <% if (book.authors && book.authors.length > 0) { %>
                  <%= book.authors.map(a => a.name + " " + a.firstname).join(", ") %>
                <% } else { %>
                  <span class="text-muted">Aucun</span>
                <% } %>
              </td>

              <!-- Genres -->
              <td>
                <% if (book.genres && book.genres.length > 0) { %>
                  <% book.genres.forEach(g => { %>
                    <span class="badge bg-secondary me-1"><%= g.name %></span>
                  <% }) %>
                <% } else { %>
                  <span class="text-muted">Aucun</span>
                <% } %>
              </td>

              <!-- Date -->
              <td class="text-muted">
                <%= book.formattedDate && book.formattedDate.length > 0 
                      ? book.formattedDate 
                      : "‚Äî" %>
              </td>

              <!-- Actions -->
              <td class="text-center">
                <div class="btn-group" role="group">

                  <!-- Voir -->
                  <a href="/admin/book/<%= book.id %>"
                     class="btn btn-sm btn-outline-info">
                    üëÅÔ∏è
                  </a>

                  <!-- Modifier -->
                  <a href="/admin/book/<%= book.id %>/edit"
                     class="btn btn-sm btn-outline-warning">
                    ‚úèÔ∏è
                  </a>

                  <!-- Supprimer -->
                  <form action="/admin/book/<%= book.id %>?_method=DELETE"
                        method="POST"
                        onsubmit="return confirm('Supprimer ce livre ? Cette action est irr√©versible.')">
                    <button type="submit" class="btn btn-sm btn-outline-danger">
                      üóëÔ∏è
                    </button>
                  </form>

                </div>
              </td>

            </tr>
          <% }) %>
        </tbody>
      </table>

    </div>
  </div>

</div>

<%- include("../partials/footer") %>