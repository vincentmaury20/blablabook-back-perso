<%- include("./partials/header.ejs") %>

<div class="my-4">

  <!-- Titre -->
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="fw-bold"><i class="bi bi-clipboard2-data-fill"></i> Tableau de bord</h1>
  </div>

  <p class="text-muted">Bienvenue, <%= adminName %> !</p>

  <!-- Cards de stats -->
  <div class="row my-4">

    <div class="col-md-4">
      <div class="card shadow-sm text-center">
        <div class="card-body">
          <h5 class="card-title"><i class="bi bi-person-badge-fill"></i> Utilisateurs</h5>
          <p class="card-text fs-4 fw-bold"><%= stats.users %></p>
        </div>
      </div>
    </div>

    <div class="col-md-4">
      <div class="card shadow-sm text-center">
        <div class="card-body">
          <h5 class="card-title"><i class="bi bi-book-half"></i> Livres</h5>
          <p class="card-text fs-4 fw-bold"><%= stats.books %></p>
        </div>
      </div>
    </div>

    <div class="col-md-4">
      <div class="card shadow-sm text-center">
        <div class="card-body">
          <h5 class="card-title"><i class="bi bi-pencil-square"></i> Auteurs</h5>
          <p class="card-text fs-4 fw-bold"><%= stats.authors %></p>
        </div>
      </div>
    </div>

  </div>

  <!-- Tableau -->
  <div class="card shadow-sm">
    <div class="card-body">

      <h2 class="mb-3">Derniers utilisateurs inscrits</h2>

      <table class="table table-hover align-middle">
        <thead class="table-dark">
          <tr>
            <th>Nom</th>
            <th>Email</th>
            <th>Date d'inscription</th>
          </tr>
        </thead>
        <tbody>
          <% users.forEach(user => { %>
            <tr>
              <td class="fw-semibold"><%= user.name %></td>
              <td><%= user.email %></td>
              <td class="text-muted"><%= user.createdAt.toLocaleDateString() %></td>
            </tr>
          <% }) %>
        </tbody>
      </table>

    </div>
  </div>

</div>

<%- include("./partials/footer.ejs") %>