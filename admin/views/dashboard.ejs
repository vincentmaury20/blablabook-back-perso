<!DOCTYPE html>
<html lang="fr">
<head>
  <meta charset="UTF-8">
  <title>Admin Dashboard</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>

  <!-- Navbar -->
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <div class="container-fluid">
      <a class="navbar-brand" href="/admin/">Admin Dashboard</a>
      <div class="collapse navbar-collapse">
        <ul class="navbar-nav ms-auto">
          <li class="nav-item"><a class="nav-link" href="#">Profil Admin</a></li>
          <li class="nav-item"><a class="nav-link" href="/admin/logout">DÃ©connexion</a></li>
        </ul>
      </div>
    </div>
  </nav>

  <div class="container-fluid">
    <div class="row">
      <!-- Sidebar -->
      <nav class="col-md-2 d-none d-md-block bg-light sidebar">
        <div class="position-sticky pt-3">
          <ul class="nav flex-column">
            <li class="nav-item"><a class="nav-link" href="/admin/users">ğŸ‘¤ Utilisateurs</a></li>
            <li class="nav-item"><a class="nav-link" href="/admin/books">ğŸ“š Livres</a></li>
            <li class="nav-item"><a class="nav-link" href="/admin/authors">âœï¸ Auteurs</a></li>
            <li class="nav-item"><a class="nav-link" href="/admin/dashboard">ğŸ“Š Dashboard</a></li>
            <li class="nav-item"><a class="nav-link" href="/admin/genres">ğŸ­ Genres</a></li>
          </ul>
        </div>
      </nav>

      <!-- Main content -->
      <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
        <h1 class="mt-4">Tableau de bord</h1>
        <p>Bienvenue, <%= adminName %> !</p>

        <!-- Cards de stats -->
        <div class="row my-4">
          <div class="col-md-3">
            <div class="card text-center">
              <div class="card-body">
                <h5 class="card-title">ğŸ‘¤ Utilisateurs</h5>
                <p class="card-text"><%= stats.users %></p>
              </div>
            </div>
          </div>
          <div class="col-md-3">
            <div class="card text-center">
              <div class="card-body">
                <h5 class="card-title">ğŸ“š Livres</h5>
                <p class="card-text"><%= stats.books %></p>
              </div>
            </div>
          </div>
          <div class="col-md-3">
            <div class="card text-center">
              <div class="card-body">
                <h5 class="card-title">âœï¸ Auteurs</h5>
                <p class="card-text"><%= stats.authors %></p>
              </div>
            </div>
          </div>
          <div class="col-md-3">
            <div class="card text-center">
              <div class="card-body">
                <h5 class="card-title">ğŸ­ Genres</h5>
                <p class="card-text"><%= stats.genres %></p>
              </div>
            </div>
          </div>
        </div>

        <!-- Tableau -->
        <h2>Derniers utilisateurs inscrits</h2>
        <table class="table table-striped">
          <thead>
            <tr>
              <th>Nom</th>
              <th>Email</th>
              <th>Date d'inscription</th>
            </tr>
          </thead>
          <tbody>
            <% users.forEach(user => { %>
              <tr>
                <td><%= user.name %></td>
                <td><%= user.email %></td>
                <td><%= user.createdAt.toLocaleDateString() %></td>
              </tr>
            <% }) %>
          </tbody>
        </table>
      </main>
    </div>
  </div>


  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>