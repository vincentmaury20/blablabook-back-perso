<%- include("../partials/header") %>

<div class="container my-4">

  <!-- HEADER DE PAGE -->
  <div class="d-flex flex-column flex-md-row justify-content-between align-items-md-center mb-4 gap-3">
    <h1 class="fw-bold text-secondary">
      <i class="bi bi-pencil-square text-success"></i> Modifier un genre
    </h1>
  </div>

  <!-- FORMULAIRE -->
  <form action="/admin/genres/<%= genre.id %>?_method=PUT" method="POST" class="mt-4">

    <div class="mb-3">
      <label for="name" class="form-label fw-semibold">Nom du genre</label>
      <input 
        type="text" 
        class="form-control" 
        id="name" 
        name="name" 
        value="<%= genre.name %>" 
        required
      >
    </div>

    <div class="d-flex flex-column flex-md-row gap-2 mt-3">
      <button type="submit" class="btn btn-success info-hover">
        <i class="bi bi-check-circle-fill"></i> Mettre à jour
      </button>

      <a href="/admin/genres" class="btn btn-secondary">
        <i class="bi bi-x-circle"></i> Annuler
      </a>
    </div>
  </form>

  <!-- ZONE DE DANGER -->
  <hr class="my-4">

  <div class="alert alert-danger">
    <h5 class="fw-bold"><i class="bi bi-exclamation-triangle-fill"></i> Zone de danger</h5>

    <form 
      action="/admin/genres/<%= genre.id %>?_method=DELETE" 
      method="POST" 
      class="d-inline"
    >
      <button 
        type="submit" 
        class="btn btn-danger btn-sm"
        onclick="return confirm('Supprimer ce genre ? Cette action est irréversible.')"
      >
        <i class="bi bi-trash-fill"></i> Supprimer ce genre
      </button>
    </form>
  </div>

</div>

<%- include("../partials/footer") %>