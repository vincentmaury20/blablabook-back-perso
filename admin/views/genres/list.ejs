<%- include("../partials/header") %>

<div class="my-4">

  <!-- HEADER DE PAGE -->
  <div class="d-flex flex-column flex-md-row justify-content-between align-items-md-center mb-4 gap-3">
    <h1 class="fw-bold text-secondary">
      <i class="bi bi-list-ul text-success"></i> Liste des genres
    </h1>

    <a href="/admin/genres/create" class="btn btn-success info-hover">
      <i class="bi bi-plus-circle-fill"></i> Ajouter un genre
    </a>
  </div>

  <!-- BARRE D'OUTILS -->
  <div class="card shadow-sm mb-4">
    <div class="card-body d-flex flex-column flex-md-row justify-content-between align-items-md-center gap-3">
      <a href="/admin" class="btn btn-outline-primary">
        <i class="bi bi-clipboard2-data"></i> Tableau de bord
      </a>

      <form class="d-flex" method="GET" action="/admin/genres" style="max-width: 300px;">
        <input class="form-control form-control-sm me-2" type="search"
               placeholder="Rechercher ..."
               name="search"
               value="<%= search || '' %>">
        <button class="btn btn-sm btn-outline-secondary" type="submit">OK</button>
      </form>
    </div>
  </div>

  <!-- Tableau -->
  <div class="card shadow-sm">
    <div class="card-body p-0">

      <table class="table table-hover align-middle mb-0">
        <thead class="table-info">
          <tr>
            <th>Nom</th>
            <th>Livres associés</th>
            <th class="text-center">Actions</th>
          </tr>
        </thead>

        <tbody>
          <% genres.forEach(genre => { %>
            <tr>
              <td class="fw-semibold"><%= genre.name %></td>

              <!-- Livres associés -->
              <td>
                <% if (genre.books && genre.books.length > 0) { %>
                  <%= genre.books.length %> livre(s)
                <% } else { %>
                  <span class="text-muted">Aucun</span>
                <% } %>
              </td>

              <!-- Actions -->
              <td class="text-center">

                <div class="btn-group" role="group">

                  <!-- Voir -->
                  <a href="/admin/genres/<%= genre.id %>"
                     class="btn btn-sm btn-outline-info"
                     data-bs-toggle="tooltip"
                     data-bs-placement="top"
                     title="Voir le détail">
                    <i class="bi bi-file-earmark-text-fill"></i>
                  </a>

                  <!-- Modifier -->
                  <a href="/admin/genres/<%= genre.id %>/edit"
                     class="btn btn-sm btn-outline-warning"
                     data-bs-toggle="tooltip"
                     data-bs-placement="top"
                     title="Modifier le genre">
                    <i class="bi bi-pencil-fill"></i>
                  </a>

                  <!-- Supprimer -->
                  <form action="/admin/genres/<%= genre.id %>?_method=DELETE"
                        method="POST"
                        onsubmit="return confirm('Supprimer ce genre ? Cette action est irréversible.')">
                    <button type="submit" class="btn btn-sm btn-outline-danger"
                            data-bs-toggle="tooltip"
                            data-bs-placement="top"
                            title="Supprimer le genre">
                      <i class="bi bi-trash3-fill"></i>
                    </button>
                  </form>

                </div>
              </td>
            </tr>
          <% }) %>
        </tbody>
      </table>

    </div>
  </div>

</div>

<%- include("../partials/footer") %>