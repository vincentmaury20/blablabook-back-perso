<%- include("../partials/header") %>

<div class="my-4">

  <!-- Titre + actions -->
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="fw-bold"><i class="bi bi-list-ul"></i> Liste des Genres</h1>
    <a href="/admin/genres/create" class="btn btn-success">
      ‚ûï Ajouter un genre
    </a>
  </div>

  <!-- Barre d'outils -->
  <div class="card shadow-sm mb-4">
    <div class="card-body d-flex justify-content-between align-items-center">
      <a href="/admin" class="btn btn-outline-primary">
        ‚¨ÖÔ∏è Retour au dashboard
      </a>

      <form class="d-flex" method="GET" action="/admin/genres" style="max-width: 300px;">
        <input class="form-control form-control-sm me-2" type="search"
               placeholder="Rechercher ..."
               name="search"
               value="<%= search || '' %>">
        <button class="btn btn-sm btn-outline-secondary" type="submit">OK</button>
      </form>
    </div>
  </div>

  <!-- Tableau -->
  <div class="card shadow-sm">
    <div class="card-body p-0">

      <table class="table table-hover align-middle mb-0">
        <thead class="table-dark">
          <tr>
            <th>Nom</th>
            <th>Livres associ√©s</th>
            <th class="text-center">Actions</th>
          </tr>
        </thead>

        <tbody>
          <% genres.forEach(genre => { %>
            <tr>
              <td class="fw-semibold"><%= genre.name %></td>

              <!-- Livres associ√©s -->
              <td>
                <% if (genre.books && genre.books.length > 0) { %>
                  <%= genre.books.length %> livre(s)
                <% } else { %>
                  <span class="text-muted">Aucun</span>
                <% } %>
              </td>

              <!-- Actions -->
              <td class="text-center">
                <div class="btn-group" role="group">

                  <!-- Voir -->
                  <a href="/admin/genres/<%= genre.id %>"
                     class="btn btn-sm btn-outline-info">
                    üëÅÔ∏è
                  </a>

                  <!-- Modifier -->
                  <a href="/admin/genres/<%= genre.id %>/edit"
                     class="btn btn-sm btn-outline-warning">
                    ‚úèÔ∏è
                  </a>

                  <!-- Supprimer -->
                  <form action="/admin/genres/<%= genre.id %>?_method=DELETE"
                        method="POST"
                        onsubmit="return confirm('Supprimer ce genre ? Cette action est irr√©versible.')">
                    <button type="submit" class="btn btn-sm btn-outline-danger">
                      üóëÔ∏è
                    </button>
                  </form>

                </div>
              </td>
            </tr>
          <% }) %>
        </tbody>
      </table>

    </div>
  </div>

</div>

<%- include("../partials/footer") %>