<!DOCTYPE html>
<html lang="fr">
<head>
  <meta charset="UTF-8">
  <title><%= title || "Blablabook Admin" %></title>
  <meta name="viewport" content="width=device-width, initial-scale=1">

  <!-- Bootstrap CSS -->
  <link 
    href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" 
    rel="stylesheet"
  >
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">

  <!-- Ton CSS admin -->
  <link rel="stylesheet" href="/admin/css/admin-style.css">
</head>

<body>

<!-- NAVBAR -->
<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
  <div class="container-fluid">

    <a class="navbar-brand" href="/admin/">Blablabook Admin</a>

    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#adminNavbar">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="adminNavbar">
      <ul class="navbar-nav ms-auto">

        <!-- Infos admin -->
        <li class="nav-item">
          <span class="nav-link">Connecté : <%= adminName %></span>
        </li>

        <li class="nav-item">
          <a class="nav-link" href="/admin/logout">Déconnexion</a>
        </li>

        <!-- Liens de la sidebar visibles uniquement sur mobile -->
        <li class="nav-item d-md-none"><a class="nav-link" href="/admin/"><i class="bi bi-clipboard2-data"></i> Tableau de bord</a></li>
        <li class="nav-item d-md-none"><a class="nav-link" href="/admin/users"><i class="bi bi-person-badge-fill"></i> Utilisateurs</a></li>
        <li class="nav-item d-md-none"><a class="nav-link" href="/admin/books"><i class="bi bi-book-half"></i> Livres</a></li>
        <li class="nav-item d-md-none"><a class="nav-link" href="/admin/authors"><i class="bi bi-pen-fill"></i> Auteurs</a></li>
        <li class="nav-item d-md-none"><a class="nav-link" href="/admin/genres"><i class="bi bi-tags-fill"></i> Genres</a></li>
        <li class="nav-item d-md-none"><a class="nav-link" href="/admin/reviews"><i class="bi bi-chat-left-text"></i> Avis</a></li>

      </ul>
    </div>

  </div>
</nav>

<!-- LAYOUT -->
<div class="container-fluid">
  <div class="row">

    <!-- SIDEBAR (desktop uniquement) -->
    <nav class="col-12 col-md-2 d-none d-md-block bg-light sidebar">
      <div class="position-sticky pt-3">
        <%- include("sidebar") %>
      </div>
    </nav>

    <!-- CONTENU PRINCIPAL -->
    <main class="col-12 col-md-10 ms-sm-auto px-3 px-md-4 mt-4">