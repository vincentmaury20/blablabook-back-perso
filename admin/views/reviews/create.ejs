<%- include("../partials/header") %>

<div class="container my-4">

  <h1 class="mb-4">➕ Créer un avis</h1>

  <form id="createReviewForm" action="/admin/review" method="POST">

    <!-- Note -->
    <div class="mb-3">
      <label class="form-label">Note (1 à 10)</label>
      <input 
        type="number" 
        name="rating" 
        class="form-control" 
        min="1" 
        max="10" 
        required
      >
    </div>

    <!-- Commentaire -->
    <div class="mb-3">
      <label class="form-label">Commentaire</label>
      <textarea 
        name="comment" 
        class="form-control" 
        rows="4"
      ></textarea>
    </div>

    <!-- Utilisateur -->
    <div class="mb-3">
      <label class="form-label">Utilisateur</label>
      <select name="user_id" class="form-select" required>
        <% users.forEach(user => { %>
          <option value="<%= user.id %>">
            <%= user.firstname %> <%= user.name %>
          </option>
        <% }) %>
      </select>
    </div>

    <!-- Livre -->
    <div class="mb-3">
      <label class="form-label">Livre concerné</label>
      <select name="book_id" class="form-select" required>
        <% books.forEach(book => { %>
          <option value="<%= book.id %>"><%= book.title %></option>
        <% }) %>
      </select>
    </div>

    <!-- Publication -->
    <div class="form-check form-switch mb-4">
      <input 
        class="form-check-input" 
        type="checkbox" 
        name="is_published" 
        value="true"
      >
      <label class="form-check-label">Publié</label>
    </div>

    <!-- Bouton -->
    <button 
      type="button" 
      class="btn btn-primary" 
      data-bs-toggle="modal" 
      data-bs-target="#confirmModal"
    >
      Créer l’avis
    </button>

  </form>
</div>

<!-- MODALE -->
<div class="modal fade" id="confirmModal" tabindex="-1" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">

      <div class="modal-header">
        <h5 class="modal-title">Confirmer la création</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
      </div>

      <div class="modal-body">
        <p>Créer cet avis ?</p>
        <p class="text-muted small">Il sera immédiatement ajouté à la base de données.</p>
      </div>

      <div class="modal-footer">
        <button 
          type="button" 
          class="btn btn-secondary" 
          data-bs-dismiss="modal"
        >
          Annuler
        </button>

        <button 
          type="button" 
          class="btn btn-primary" 
          id="confirmSubmit"
        >
          Confirmer
        </button>
      </div>

    </div>
  </div>
</div>

<script>
  document.getElementById("confirmSubmit").addEventListener("click", () => {
    document.getElementById("createReviewForm").submit();
  });
</script>

<%- include("../partials/footer") %>