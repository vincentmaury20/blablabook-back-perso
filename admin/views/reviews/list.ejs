<%- include("../partials/header") %>

<div class="container my-4">

  <!-- Titre + actions -->
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="fw-bold"><i class="bi bi-chat-left-text"></i> Liste des avis</h1>
  </div>

  <!-- Barre d'outils -->
  <div class="card shadow-sm mb-4">
    <div class="card-body d-flex justify-content-between align-items-center">
      <a href="/admin" class="btn btn-outline-primary">
        ⬅️ Retour au dashboard
      </a>
      <a href="/admin/review/create" class="btn btn-outline-primary">
        ➕ Créer un avis
      </a>
    </div>
  </div>

  <!-- Tableau -->
  <div class="card shadow-sm">
    <div class="card-body p-0">

      <table class="table table-hover align-middle mb-0">
        <thead class="table-info">
          <tr>
            <th>Utilisateur</th>
            <th>Livre</th>
            <th>Note</th>
            <th>Commentaire</th>
            <th>Statut</th>
            <th class="text-center">Actions</th>
          </tr>
        </thead>

        <tbody>
          <% reviews.forEach(review => { %>
            <tr>

              <!-- Utilisateur -->
              <td class="fw-semibold">
                <% if (review.User) { %>
                  <%= review.User.firstname %> <%= review.User.name %>
                <% } else { %>
                  <span class="text-muted">Supprimé</span>
                <% } %>
              </td>

              <!-- Livre -->
              <td>
                <% if (review.Book) { %>
                  <%= review.Book.title %>
                <% } else { %>
                  <span class="text-muted">Supprimé</span>
                <% } %>
              </td>

              <!-- Note -->
              <td class="text-center">
                <div class="d-flex align-items-center justify-content-center">
                  <% for (let i = 0; i < review.rating; i++) { %>
                    <i class="bi bi-star-fill text-warning"></i>
                  <% } %>
                  <span class="ms-2 badge bg-secondary"><%= review.rating %>/10</span>
                </div>
              </td>

              <!-- Commentaire -->
              <td>
                <% if (review.comment && review.comment.length > 0) { %>
                  <span title="<%= review.comment %>">
                    <%= review.comment.substring(0, 50) %>...
                  </span>
                <% } else { %>
                  <span class="text-muted">Aucun</span>
                <% } %>
              </td>

              <!-- Statut -->
              <td class="text-center">
                <% if (review.is_published) { %>
                  <span class="badge bg-success">Publié</span>
                <% } else { %>
                  <span class="badge bg-warning text-dark">Brouillon</span>
                <% } %>
              </td>

              <!-- Actions -->
              <td class="text-center">
                <div class="btn-group btn-group-lg" role="group">

                  <!-- Modifier -->
                  <a href="/admin/review/<%= review.id %>/edit"
                     class="btn btn-lg btn-outline-warning"
                     data-bs-toggle="tooltip"
                     data-bs-placement="top"
                     title="Modifier cet avis">
                    <i class="bi bi-pencil-fill"></i>
                  </a>

                  <!-- Toggle Publish -->
                  <form action="/admin/review/<%= review.id %>/toggle"
                        method="POST"
                        style="display: inline;">
                    <button type="submit" 
                            class="btn btn-lg btn-outline-<%= review.is_published ? 'info' : 'secondary' %>"
                            data-bs-toggle="tooltip"
                            data-bs-placement="top"
                            title="<%= review.is_published ? 'Dépublier' : 'Publier' %>">
                      <i class="bi <%= review.is_published ? 'bi-eye-slash' : 'bi-eye' %>"></i>
                    </button>
                  </form>

                  <!-- Supprimer -->
                  <form action="/admin/review/<%= review.id %>?_method=DELETE"
                        method="POST"
                        style="display: inline;"
                        onsubmit="return confirm('Supprimer cet avis ? Cette action est irréversible.')">
                    <button type="submit" class="btn btn-lg btn-outline-danger"
                            data-bs-toggle="tooltip"
                            data-bs-placement="top"
                            title="Supprimer cet avis">
                      <i class="bi bi-trash3-fill"></i>
                    </button>
                  </form>

                </div>
              </td>

            </tr>
          <% }) %>
        </tbody>
      </table>

    </div>
  </div>

</div>

<%- include("../partials/footer") %>