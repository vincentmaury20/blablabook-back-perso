<%- include("../partials/header") %>

<div class="container my-4">

  <!-- HEADER DE PAGE -->
  <div class="d-flex flex-column flex-md-row justify-content-between align-items-md-center mb-4 gap-3">
    <h1 class="fw-bold text-secondary">
      <i class="bi bi-pencil-square text-success"></i> Modifier un utilisateur
    </h1>
  </div>

  <!-- FORMULAIRE -->
  <form action="/admin/user/<%= user.id %>?_method=PUT" method="POST" class="mt-4">

    <div class="row">
      <div class="col-12 col-md-6 mb-3">
        <label for="name" class="form-label fw-semibold">Nom</label>
        <input type="text" class="form-control" id="name" name="name" value="<%= user.name %>" required>
      </div>

      <div class="col-12 col-md-6 mb-3">
        <label for="firstname" class="form-label fw-semibold">Prénom</label>
        <input type="text" class="form-control" id="firstname" name="firstname" value="<%= user.firstname %>" required>
      </div>
    </div>

    <div class="row">
      <div class="col-12 col-md-6 mb-3">
        <label for="email" class="form-label fw-semibold">Email</label>
        <input type="email" class="form-control" id="email" name="email" value="<%= user.email %>" required>
      </div>

      <div class="col-12 col-md-6 mb-3">
        <label for="role" class="form-label fw-semibold">Rôle</label>
        <select name="role" id="role" class="form-select" required>
          <option value="user" <%= user.role === "user" ? "selected" : "" %>>Utilisateur</option>
          <option value="admin" <%= user.role === "admin" ? "selected" : "" %>>Administrateur</option>
        </select>
      </div>
    </div>

    <div class="mb-3">
      <label for="books" class="form-label fw-semibold">Livres associés</label>
      <% if (user.books && user.books.length > 0) { %>
        <ul class="list-group">
          <% user.books.forEach(book => { %>
            <li class="list-group-item"><%= book.title %></li>
          <% }) %>
        </ul>
      <% } else { %>
        <p class="text-muted">Aucun livre associé</p>
      <% } %>
    </div>

    <div class="d-flex flex-column flex-md-row gap-2 mt-3">
      <button type="submit" class="btn btn-success info-hover">
        <i class="bi bi-check-circle-fill"></i> Mettre à jour
      </button>

      <a href="/admin/users" class="btn btn-secondary">
        <i class="bi bi-x-circle"></i> Annuler
      </a>
    </div>
  </form>

  <!-- ZONE DE DANGER -->
  <hr class="my-4">

  <div class="alert alert-danger">
    <h5 class="fw-bold"><i class="bi bi-exclamation-triangle-fill"></i> Zone de danger</h5>

    <form 
      action="/admin/user/<%= user.id %>?_method=DELETE" 
      method="POST" 
      class="d-inline"
    >
      <button 
        type="submit" 
        class="btn btn-danger btn-sm"
        onclick="return confirm('Êtes-vous sûr ?')"
      >
        <i class="bi bi-trash-fill"></i> Supprimer cet utilisateur
      </button>
    </form>
  </div>

</div>

<%- include("../partials/footer") %>